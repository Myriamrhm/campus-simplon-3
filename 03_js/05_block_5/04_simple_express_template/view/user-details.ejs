<%- include partial/head.ejs %>

<section id="user_details" class="main">
  <h1 class="title main"><%= title %></h1>
  <form id="form_edit_user">
    <label for="name">Nom</label>
    <input id="name" type="text" class="input text" placeholder="name" value="<%= user.name %>">
    <label for="lastname">Pr√©nom</label>
    <input id="lastname" type="text" class="input text" placeholder="lastname" value="<%= user.lastname %>">
    <label for="email">Email</label>
    <input id="email" type="email" class="input text" placeholder="email" value="<%= user.email %>">
    <label for="age">Age (<span id="view_user_age"><%= user.age || 0 %></span>)</label>
    <input id="set_user_age" type="range" class="input range" value="<%= user.age || 0 %>" min="1" max="140" step="1">
    <label for="email">Pays</label>
    <input list="countries" id="country_list" name="countries" class="input text" value="<%= user['country name'] %>"/>
    <datalist id="countries">
        <% for (let i = 0; i < countries.length; i += 1) {%>
          <option value="<%= countries[i].name %>">
              <%= countries[i].name %>
          </option>
        <% } %>
    </datalist>
    <button class="btn">update !</button>
  </form>
</section>

